/* pages/goodDetail/goodDetail.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}
.good_all{
  padding:10rpx 20rpx;
}
.good_img_area{
  display:flex;                 
  justify-content: center;        
  align-items:center;  
}
.good_img_area image{
  width: 100%;
  display: block;
}
.good_title_area{
  padding:10rpx 20rpx;
  display:block; 
}
.IsTmall{
    border: 1rpx solid #FC3F78;
    color: #FC3F78;
    border-radius: 5rpx;
    -moz-border-radius: 5rpx;
    -webkit-border-radius: 5rpx;
    -o-border-radius: 5rpx;
    -ms-border-radius: 5rpx;
    padding: 5rpx;
    margin-right: 5rpx;
    font-size: 20rpx;
    float: left;
}
.D_title{
   font-size: 30rpx;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    display:block;
    white-space: pre-line;
    width:500rpx;
    float: left;
}
.price_detail{
  display:flex;                 
  align-items:center;  
}
.price_area{
  color: red;
  float: left;
  padding:10rpx 20rpx;
  display:flex;                        
  align-items:center;  
}
.price_word{
    font-size: 25rpx;
    line-height: 20rpx;
    float: left;
    
}
.Price{
  display: block;
  font-size: 35rpx;
  line-height: 35rpx;
  float: left;
}
.Sales_num{
  float: right;
  font-size: 25rpx;
  line-height: 25rpx;
  color: #666;
  position:fixed;
  right:20rpx;

}
.coupon_area{
  padding:10rpx 20rpx;
}
.Quan_price_area{
  display: block;
  position: absolute;
  z-index: 1;
  zoom: 1;
  text-align: center;
  background-image: url(http://cmsstatic.dataoke.com//wap_new/main/images/goods_quan.png?v=201902151532);
  background-repeat:no;
  background-size: cover;
}
.Org_Price{
  font-size: 25rpx;
  line-height: 25rpx;
  color: #666;
  float: left;
}
.money{
    font-size: 35rpx;
    color: rgba(255,255,255,.6);
    padding-top: 6%;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
    zoom: 1;
    left: 20rpx;
    width:100%;
}
.quan_area{
    font-size: 16rpx;
    font-weight: 600;
    color: #fff;
}
.Quan_price{
  font-size: 40rpx;
  position: relative;
  z-index: 1;
  zoom: 1;
  top: 10rpx;
}