/* pages/top100/top100.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}
.good_detail{
  background: rgba(255, 255, 255, 1);
  margin-bottom: 20px;
  padding: 30rpx;
  display: flex;
}
.good_img_area{
  float: left;
}
.good_img{
  width: 200rpx;
  height: 200rpx;
}
.good_desc{
    margin: 0 20rpx;
    float: left;
}
.D_title{
    font-size: 30rpx;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    display:block;
    white-space: pre-line;
    width:430rpx;
}
.price_detail{
  margin: 20rpx 0;
}
.Org_Price{
  font-size: 25rpx;
  color:gray;
  float: left;
}
.Sales_num{
  font-size: 25rpx;
  color:gray;
  float: right;
}
.coupon_area{
  padding: 20rpx 0;
}

.Price{
  float: left;
  font-size: 25rpx;
  color:red;
}
.Quan_price{
  float: right;
  font-size: 25rpx;
  color:white;
  background-color: red;
  padding:5px;
}